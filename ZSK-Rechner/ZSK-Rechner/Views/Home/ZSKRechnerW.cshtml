@model ZSK_Rechner.Models.PreisMenge
@{
    ViewData["Title"] = "ZSKRechnerW";
}



<div class="text-center">
    <h1 class="display-4">Betrag in ZSK</h1>

    <div class="text-center">
        <div class="row">
            <div class="col-6">
                <h2 class="h2">Tier Menge</h2>
                <form asp-action="ZSKRechnerW" method="post" class="m-6">
                    <div class="form-group">
                        <label asp-for="KuhMenge">Kuh</label>
                        <input asp-for="KuhMenge" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="SchafMenge">Schaf</label>
                        <input asp-for="SchafMenge" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ZiegeMenge">Ziege</label>
                        <input asp-for="ZiegeMenge" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="KleineZiegeMenge">Kleine Ziege</label>
                        <input asp-for="KleineZiegeMenge" class=" form-control" />
                    </div>
                      

                </form>
            </div>
            <div class="col-6">
                <h2 class="h2">Tier Preis</h2>
                <form asp-action="FormZSK" method="post" class="m-6">
                    <div class="form-group">
                        <label asp-for="KuhPreis">Kuh</label>
                        <input asp-for="KuhPreis" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="SchafPreis">Schaf</label>
                        <input asp-for="SchafPreis" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ZiegePreis">Ziege</label>
                        <input asp-for="ZiegePreis" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="KleinZiegePreis">Kleine Ziege</label>
                        <input asp-for="KleinZiegePreis" class=" form-control" />
                    </div>
                    

                </form>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Rechnen</button>
            </div>
        </div>
        
       

    </div>


</div>
