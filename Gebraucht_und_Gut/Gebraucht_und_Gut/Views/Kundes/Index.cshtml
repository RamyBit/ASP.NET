@model IEnumerable<Gebraucht_und_Gut.Models.Kunde>

@{
    ViewData["Title"] = "Index";
}

<h1>Kunde Liste</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Kunde eintragen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vorname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vorname)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.KundeId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.KundeId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.KundeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
